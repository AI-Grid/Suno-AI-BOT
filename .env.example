# Matrix Bot Configuration

# The Matrix server URL (usually something like https://matrix.org)
MATRIX_HOMESERVER_URL=https://matrix.org

# The username of the bot account (without @ or :matrix.org)
MATRIX_USERNAME=your_bot_username

# The password of the bot account
MATRIX_PASSWORD=your_bot_password

# The room ID or alias where the bot should operate (e.g., !roomid:matrix.org or #room:matrix.org)
MATRIX_ROOM_ID=!your_room_id:matrix.org

# Optional: The access token for the bot account (can be used instead of username/password)
#MATRIX_ACCESS_TOKEN=your_access_token

# Suno AI Configuration

# Your Suno API cookie, used for authenticating with Suno AI
SUNO_COOKIE=your_suno_cookie

# Optional: The bot password for restricted commands
BOT_PASSWORD=your_secure_bot_password
